# SchoolDoor Backend Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./schooldoor.db

# AI API Configuration (Optional)
PERPLEXITY_API_KEY=

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=6001
DEBUG=True

# CORS Configuration (comma-separated origins, or leave blank)
CORS_ORIGINS=http://localhost:3000

# Application Focus
COUNTRY=India
EDUCATION_SYSTEM=

# Authentication Secrets (IMPORTANT: Change these!)
PARTICIPANT_PASSWORD=change-me-participant
ADMIN_PASSWORD=change-me-admin
ADMIN_EMAIL=admin@example.com
